<% if @port == 80 %>
        NameVirtualHost *:80
<% end %>
<VirtualHost *:<%= @port %> >
        ServerName <%= @domain %>
        DocumentRoot <%= @document_root %>

<Directory />
Options FollowSymLinks
AllowOverride None
Require all granted
</Directory>
<Directory <%= @document_root %> >
Options Indexes FollowSymLinks
AllowOverride None
Require all granted
</Directory>
</VirtualHost>
